<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".landingPage">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/postTe"
        android:text="What do you need?"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/post1"
        android:text="1-You ask:"
        android:textSize="18sp"
        android:textColor="@color/green"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"/>


    <RadioButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/radio1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="45dp"
        android:text="An object"/>

    <RadioButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/radio2"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="75dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="190dp"
        android:text="An service"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="110dp"
        android:textSize="18sp"
        android:text="2-Explain your needs to your neighbors:"
        android:textColor="@color/green"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:text="Minimum 25 characters(0/25)"
        android:textSize="18sp"
        android:layout_marginTop="220dp"
        android:textColor="@color/black"/>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="260dp"
        android:text="3-Where do you need it?"
        android:textSize="18sp"
        android:textColor="@color/green"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        android:layout_marginTop="290dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/bordercolor"
        android:layout_marginRight="15dp"
        android:layout_marginTop="340dp"
        android:textColor="@color/white"
        android:text="Ask my neigbhors"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="260dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="400dp"
        android:background="@color/green"
        />
    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/butn"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="110dp"
        android:text="I'm registering"
        android:background="@drawable/buttoncolorpink"/>
    <TextView
        android:layout_width="200dp"
        android:layout_marginRight="10dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:id="@+id/textAl"
        android:text="Already a member?"
        android:textColor="@color/white"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="600dp"

        />



</RelativeLayout>